<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- tint -->
    <font
        android:font="@font/roboto_thin"
        android:fontStyle="normal"
        android:fontWeight="100"

        app:font="@font/roboto_thin"
        app:fontStyle="normal"
        app:fontWeight="200" />

    <!-- tint italic -->
    <font
        android:font="@font/roboto_thin_italic"
        android:fontStyle="italic"
        android:fontWeight="100"

        app:font="@font/roboto_thin_italic"
        app:fontStyle="italic"
        app:fontWeight="200" />

    <!-- light -->
    <font
        android:font="@font/roboto_light"
        android:fontStyle="normal"
        android:fontWeight="200"

        app:font="@font/roboto_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <!-- light italic -->
    <font
        android:font="@font/roboto_light_italic"
        android:fontStyle="italic"
        android:fontWeight="200"

        app:font="@font/roboto_light_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />


    <!-- regular -->
    <font
        android:font="@font/roboto_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/roboto_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- regular italic -->
    <font
        android:font="@font/roboto_regular_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/roboto_regular_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />


    <!-- medium -->
    <font
        android:font="@font/roboto_medium"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/roboto_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!-- medium italic -->
    <font
        android:font="@font/roboto_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="500"

        app:font="@font/roboto_medium_italic"
        app:fontStyle="italic"
        app:fontWeight="500" />

    <!-- bold -->
    <font
        android:font="@font/roboto_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/roboto_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!-- bold italic -->
    <font
        android:font="@font/roboto_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700"

        app:font="@font/roboto_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="700" />

    <!-- black -->
    <font
        android:font="@font/roboto_black"
        android:fontStyle="normal"
        android:fontWeight="800"

        app:font="@font/roboto_black"
        app:fontStyle="normal"
        app:fontWeight="800" />

    <!-- black  italic -->
    <font
        android:font="@font/roboto_black_italic"
        android:fontStyle="italic"
        android:fontWeight="800"

        app:font="@font/roboto_black_italic"
        app:fontStyle="italic"
        app:fontWeight="800" />
</font-family>